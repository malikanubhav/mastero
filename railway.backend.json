{
    "$schema": "https://docs.railway.com/reference/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "rm -rf node_modules/.cache || true; npm ci --omit=dev && npm run -w backend build --if-present"
    },
    "deploy": {
        "startCommand": "npm run -w backend start",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 120,
        "restartPolicyType": "ALWAYS"
    }
}