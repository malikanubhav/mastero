{
    "$schema": "https://docs.railway.com/reference/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm ci --omit=dev && npm run build -w backend || echo \"no backend build\""
    },
    "deploy": {
        "startCommand": "npm run start -w backend",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 120,
        "restartPolicyType": "ALWAYS"
    }
}