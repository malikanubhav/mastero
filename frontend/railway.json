{
    "$schema": "https://docs.railway.com/reference/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm ci --omit=dev && npm run build -w frontend"
    },
    "deploy": {
        "startCommand": "npm run start -w frontend",
        "healthcheckPath": "/",
        "restartPolicyType": "ALWAYS"
    }
}