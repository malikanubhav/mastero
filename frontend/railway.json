{
    "$schema": "https://docs.railway.com/reference/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm ci && npm run build",
        "watchPatterns": [
            "src/**",
            "public/**",
            "index.html",
            "vite.config.*",
            "package.json",
            "package-lock.json"
        ]
    },
    "deploy": {
        "startCommand": "npx serve -s dist -l $PORT",
        "healthcheckPath": "/",
        "restartPolicyType": "ALWAYS"
    }
}